@page
@model ResumеBuilder.Pages.ResumeTemp1
@{
}

<form>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Resume</title>
        <script src="https://unpkg.com/feather-icons"></script>
        <link rel="stylesheet" href="style.css">
    </head>

    <body>
        <div class="container">
            <div class="profile">
                <div class="profile_container">
                    <div>
                        <h1 class="profile_name">
                            @HttpContext.Session.GetString("_FullName")
                        </h1>
                        <p class="profile_title">
                            <textarea class="textarea" placeholder="Position..." rows="1" cols="30"></textarea>
                        </p>
                        <p class="description profile_description">
                            <textarea class="textarea1" placeholder="Description..." rows="1" cols="30"></textarea>
                        </p>
                    </div>
                </div>
            </div>



            <div class="group-1">
                <div class="title">
                    <h3>Skills</h3>
                    <textarea class="textarea2" placeholder="Skills..." rows="1" cols="30"></textarea>
                </div>

                <div class="edu">
                    <h3 class="title">Education</h3>
                    <textarea class="textarea2" placeholder="Education..." rows="1" cols="30"></textarea>
                </div>
            </div>



            <div class="group-2">
                <div class="exp">
                    <h3 class="title">Experience</h3>
                    <textarea class="textarea2" placeholder="Experience..." rows="1" cols="30"></textarea>
                </div>

                <div class="interetss">
                    <h3 class="title">Interests</h3>
                    <textarea class="textarea2" placeholder="Interests..." rows="1" cols="30"></textarea>
                </div>
            </div>



            <hr>
            <div class="group-3" style="text-align:center;">
                <div class="contact">
                    <h3 class="title">Contact</h3>
                    <div class="contact_info">
                        <p class="description">
                            @HttpContext.Session.GetString("_Address")
                        </p>
                        <p class="description">
                            @HttpContext.Session.GetString("_PhoneNumber")
                        </p>
                        <p class="description">
                            @HttpContext.Session.GetString("_Email")
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <script>
            feather.replace()
        </script>

    </body>
    </html>
</form>